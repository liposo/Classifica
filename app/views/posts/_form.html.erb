<div class="row">
    <div class="col-sm-4">
      <%= form_for @post do |f| %>
  <fieldset class="form-group">
    <h4>Título</h4>
    <%= f.text_field :title, class: "form-control" %>
  </fieldset>

  <fieldset class="form-group">
    <h4>Descrição</h4>
    <%= f.text_area :description, class: "form-control" %>
  </fieldset>

  <h4>Endereço</h4>
  <fieldset class="form-group">
    <%= f.text_field :raw_address, class: "form-control" %>
  </fieldset>
  <h4>Ou selecione a localização pelo mapa</h4>
  <br>
  <%= f.submit 'Anunciar!', class: 'btn btn-primary' %>
<% end %>
    </div>
    <div class="col-sm-8">
      <div class="card">
        <div class="card-block">
          <div id="mapAdd" onload="initMapAdd"></div>
      </div>
    </div>
    </div>
</div>



